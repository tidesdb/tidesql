#
# TidesDB encryption + secondary index combined test
# Verifies that encrypted data is correctly handled through all index paths
#
DROP TABLE IF EXISTS tidesdb_check;
# Encryption enabled via .opt file
# Test 1: Basic secondary index with encryption
CREATE TABLE t1 (
id INT PRIMARY KEY,
name VARCHAR(100),
val INT,
KEY idx_name (name),
KEY idx_val (val)
) ENGINE=TidesDB;
Warnings:
Note	1071	Specified key was too long; max key length is 255 bytes
INSERT INTO t1 VALUES (1, 'alice', 100), (2, 'bob', 200), (3, 'charlie', 300),
(4, 'alice', 400), (5, 'bob', 500);
# Secondary index scan should decrypt correctly
SELECT * FROM t1 WHERE name = 'alice' ORDER BY id;
id	name	val
1	alice	100
4	alice	400
SELECT * FROM t1 WHERE name = 'bob' ORDER BY id;
id	name	val
2	bob	200
5	bob	500
SELECT * FROM t1 WHERE val BETWEEN 200 AND 400 ORDER BY id;
id	name	val
2	bob	200
3	charlie	300
4	alice	400
# Test 2: Index scan with covering index (keyread)
SELECT name FROM t1 WHERE name = 'alice';
name
alice
alice
SELECT val FROM t1 WHERE val > 300 ORDER BY val;
val
400
500
# Test 3: Update through secondary index path
UPDATE t1 SET val = 999 WHERE name = 'charlie';
SELECT * FROM t1 WHERE id = 3;
id	name	val
3	charlie	999
# Test 4: Delete through secondary index
DELETE FROM t1 WHERE name = 'bob';
SELECT * FROM t1 ORDER BY id;
id	name	val
1	alice	100
3	charlie	999
4	alice	400
# Test 5: UNIQUE secondary index with encryption
CREATE TABLE t2 (
id INT PRIMARY KEY,
email VARCHAR(200),
UNIQUE KEY idx_email (email)
) ENGINE=TidesDB;
INSERT INTO t2 VALUES (1, 'a@test.com'), (2, 'b@test.com'), (3, 'c@test.com');
# Unique index lookup with encryption
SELECT * FROM t2 WHERE email = 'b@test.com';
id	email
2	b@test.com
# Duplicate should fail
INSERT INTO t2 VALUES (4, 'a@test.com');
ERROR 23000: Duplicate entry 'a@test.com' for key 'idx_email'
# Test 6: Composite secondary index with encryption
CREATE TABLE t3 (
id INT PRIMARY KEY,
a INT,
b VARCHAR(50),
KEY idx_ab (a, b)
) ENGINE=TidesDB;
INSERT INTO t3 VALUES (1, 10, 'x'), (2, 10, 'y'), (3, 20, 'x'), (4, 20, 'y');
SELECT * FROM t3 WHERE a = 10 ORDER BY b;
id	a	b
1	10	x
2	10	y
SELECT * FROM t3 WHERE a = 20 AND b = 'y';
id	a	b
4	20	y
# Cleanup
DROP TABLE t3;
DROP TABLE t2;
DROP TABLE t1;
